<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/change_password_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/change_password_header_layout"
            android:layout_width="0dp"
            android:layout_height="@dimen/defaultHeaderHeight"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:elevation="@dimen/defaultHeaderElevation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/change_password_header_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/change_password"
                android:textColor="@color/colorHeaderLabelsPrimary"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/change_password_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@color/colorPrimary"
                android:contentDescription="back button"
                android:tint="@color/colorHeaderLabelsPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_back_arrow"
                android:padding="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_password_header_layout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/change_password_labels_layout" android:clipToPadding="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" android:id="@+id/change_password_current_password_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:id="@+id/change_password_current_password_labels_layout"
                    android:background="@color/colorLabelsBackgroundPrimary"
                    android:elevation="@dimen/changePasswordLabelsBackgroundElevation">

                <TextView
                        android:text="@string/change_password_current_password_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/change_password_current_password_label"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"
                        android:textColor="@color/colorTextsPrimary" android:textSize="16sp"
                />
                <View
                        android:id="@+id/current_password_label_separator"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorBordersPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="1.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/change_password_current_password_inputs_layout">

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/change_password_current_password_input"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/current_password_input_separator"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp"
                        android:hint="@string/change_password_current_password_hint"
                        android:textColor="@color/colorTextsPrimary"
                        android:background="@null" android:paddingLeft="16sp"
                        android:textColorHint="@color/colorHintsPrimary"/>
                <View
                        android:id="@+id/current_password_input_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBordersPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="1.0"
                        app:layout_constraintHorizontal_bias="0.0" android:alpha="0.5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" android:id="@+id/change_password_new_password_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="144dp"
                    android:layout_height="match_parent" android:id="@+id/change_password_new_password_labels_layout"
                    android:background="@color/colorLabelsBackgroundPrimary"
                    android:elevation="@dimen/changePasswordLabelsBackgroundElevation">
                <TextView
                        android:text="@string/change_password_new_password_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp"
                        android:textColor="@color/colorTextsPrimary"
                        android:id="@+id/change_password_new_password_label"/>
                <View
                        android:id="@+id/new_password_separator"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorBordersPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="1.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/change_password_new_password_inputs_layout">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/change_password_new_password_input"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/new_password_input_separator"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp"
                        android:hint="@string/change_password_new_password_hint"
                        android:textColor="@color/colorTextsPrimary"
                        android:background="@null" android:paddingLeft="16sp"
                        android:textColorHint="@color/colorHintsPrimary"/>

                <View
                        android:id="@+id/new_password_input_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBordersPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="1.0"
                        app:layout_constraintHorizontal_bias="0.0" android:alpha="0.5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" android:id="@+id/change_password_password_confirmation_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:id="@+id/change_password_password_confirmation_labels_layout"
                    android:background="@color/colorLabelsBackgroundPrimary"
                    android:elevation="@dimen/changePasswordLabelsBackgroundElevation">

                <TextView
                        android:text="@string/change_password_password_confirmation_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/change_password_password_confirmation_label"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="16sp"
                        android:textColor="@color/colorTextsPrimary" app:layout_constraintHorizontal_bias="0.0"
                        app:fontFamily="@font/segoeui" android:fontFamily="@font/segoeui_bold"
                        android:typeface="normal"/>
                <View
                        android:id="@+id/password_confirmation_separator"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorBordersPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
                        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                        app:layout_constraintHorizontal_bias="1.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/change_password_password_confirmation_inputs_layout">
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/change_password_password_confirmation_input"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/password_confirmation_input_separator"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp"
                        android:hint="@string/change_password_password_confirmation_hint"
                        android:textColor="@color/colorTextsPrimary"
                        android:background="@null" android:paddingLeft="16sp"
                        android:textColorHint="@color/colorHintsPrimary"/>

                <View
                        android:id="@+id/password_confirmation_input_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBordersPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp" app:layout_constraintVertical_bias="1.0"
                        app:layout_constraintHorizontal_bias="0.0" android:alpha="0.5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
            android:id="@+id/change_password_update_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/changePasswordSaveButtonHeight"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"
            android:background="@drawable/default_button_background"
            android:clickable="false"
            android:enabled="false"
            android:text="@string/update"
            android:textColor="@color/colorButtonLabelsPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_password_labels_layout"
            app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>