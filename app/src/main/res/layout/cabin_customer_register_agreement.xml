<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/customer_agreement">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agreemet_linear_layout"
            android:orientation="vertical" android:paddingBottom="50dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agreement_back_layout"
                android:gravity="center"
                android:layout_marginTop="30dp">
            <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/agreement_back_button"
                    android:background="@drawable/more_button"
                    style="@android:style/Widget.Button"
                    android:rotation="180"/>
        </LinearLayout>
        <TextView
                android:text="@string/user_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/agreement_text"
                android:layout_marginTop="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColor="@android:color/black"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center" android:layout_marginTop="50dp">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" android:id="@+id/agreement_confirmation_button"
                    android:text="@string/agreement_confirmation_button"
                    android:background="@drawable/cabin_default_text_background" android:paddingLeft="10dp"
                    android:paddingRight="10dp" android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>