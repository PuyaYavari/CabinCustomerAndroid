<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPageBackgroundPrimary">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPageBackgroundPrimary"
            android:orientation="vertical"
            android:paddingBottom="@dimen/productDetailBottomBarHeight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/horizontal_divider_light_16_0"
                android:orientation="vertical"
                android:showDividers="middle|end">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/horizontal_divider_0_2"
                    android:orientation="vertical"
                    android:showDividers="middle">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPageBackgroundPrimary"
                        android:elevation="3dp">

                    <androidx.viewpager.widget.ViewPager
                            android:id="@+id/product_detail_product_image_pager"
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:layout_marginBottom="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <ToggleButton
                            android:id="@+id/product_detail_favourite_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/default_like_button"
                            android:elevation="5dp"
                            android:textOff=""
                            android:textOn=""
                            app:layout_constraintBottom_toBottomOf="@+id/product_detail_product_image_pager"
                            app:layout_constraintEnd_toEndOf="@+id/product_detail_product_image_pager"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="@+id/product_detail_product_image_pager"
                            app:layout_constraintTop_toTopOf="@id/product_detail_product_image_pager"
                            app:layout_constraintVertical_bias="0.0" />

                    <androidx.constraintlayout.motion.widget.MotionLayout
                            android:id="@+id/product_detail_indicator_motion_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            app:layoutDescription="@xml/product_detail_transitions"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:showPaths="false">

                        <ImageView
                                android:id="@+id/product_detail_frog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="4dp"
                                app:layout_constraintBottom_toTopOf="@+id/product_image_indicators"
                                app:layout_constraintEnd_toEndOf="@+id/product_image_indicators"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="@+id/product_image_indicators"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                app:srcCompat="@drawable/icon_frog" />

                        <LinearLayout
                                android:id="@+id/product_image_indicators"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="1dp"
                                android:paddingBottom="4dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0">

                            <View
                                    android:id="@+id/image1_indicator"
                                    android:layout_width="15dp"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimaryDark"
                                    tools:layout_editor_absoluteX="5dp"
                                    tools:layout_editor_absoluteY="519dp" />

                            <View
                                    android:id="@+id/image2_indicator"
                                    android:layout_width="15dp"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimaryDark"
                                    tools:layout_editor_absoluteX="28dp"
                                    tools:layout_editor_absoluteY="519dp" />

                            <View
                                    android:id="@+id/image3_indicator"
                                    android:layout_width="15dp"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimaryDark"
                                    tools:layout_editor_absoluteX="28dp"
                                    tools:layout_editor_absoluteY="519dp" />

                            <View
                                    android:id="@+id/image4_indicator"
                                    android:layout_width="15dp"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimaryDark"
                                    tools:layout_editor_absoluteX="5dp"
                                    tools:layout_editor_absoluteY="519dp" />

                            <View
                                    android:id="@+id/image5_indicator"
                                    android:layout_width="15dp"
                                    android:layout_height="1dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginEnd="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_weight="1"
                                    android:background="@color/colorPrimaryDark"
                                    android:visibility="visible"
                                    tools:layout_editor_absoluteX="5dp"
                                    tools:layout_editor_absoluteY="519dp" />
                        </LinearLayout>

                    </androidx.constraintlayout.motion.widget.MotionLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:padding="8dp">

                    <TextView
                            android:id="@+id/product_detail_seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Seller Name"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/product_detail_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Product Name"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="16sp" />

                    <TextView
                            android:id="@+id/product_detail_product_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Product ID"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:tint="@color/colorTextsPrimary"
                            app:srcCompat="@drawable/icon_bike" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/cargo_date_label"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="15sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/separator_dots"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="15sp" />

                    <TextView
                            android:id="@+id/product_detail_cargo_duration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Date"
                            android:textColor="@color/colorLightTextsPrimary"
                            android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:tint="@color/colorTextsPrimary"
                            app:srcCompat="@drawable/icon_bike" />

                    <TextView
                            android:id="@+id/product_detail_cargo_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/free_shipment_label"
                            android:textColor="@color/colorPriceGreen"
                            android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/color"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_detail_color_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/size"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_detail_size_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/peoduct_datail_product_explanation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/product_explanation_label"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_detail_info_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPriceGreen"
            android:padding="16dp"
            android:visibility="invisible">

        <TextView
                android:id="@+id/product_detail_info_popup_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_added_to_cart"
                android:textColor="@color/colorButtonLabelsPrimary"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_detail_bottom_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/productDetailBottomBarHeight"
            android:layout_gravity="bottom"
            android:background="@color/colorPageBackgroundPrimary"
            android:elevation="5dp">

        <Button
                android:id="@+id/product_detail_add_to_cart_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/productDetailAddToCartButtonHeight"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/default_button_background"
                android:text="@string/add_to_cart_label"
                android:textAlignment="center"
                android:textColor="@color/colorButtonLabelsPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/product_detail_bottom_bar_layout_50pv_guideline"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/product_detail_bottom_bar_layout_50pv_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
                android:id="@+id/product_detail_bottom_bar_layout_texts_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/product_detail_bottom_bar_layout_50pv_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:id="@+id/product_detail_in_cart_discounts_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                <LinearLayout
                        android:id="@+id/product_detail_before_discount_price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_price_strike"
                        android:gravity="start|left"
                        android:orientation="horizontal"
                        android:visibility="visible">

                    <TextView
                            android:id="@+id/product_detail_before_discount_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:text="000"
                            android:textColor="@color/colorLightTextsPrimary"
                            android:textSize="11sp" />

                    <TextView
                            android:id="@+id/product_detail_before_discount_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="right|end"
                            android:text="TL"
                            android:textColor="@color/colorLightTextsPrimary"
                            android:textSize="11sp" />
                </LinearLayout>

                <TextView
                        android:id="@+id/product_detail_in_cart_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="In Cart Discount"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="11sp"
                        android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/product_detail_before_cart_price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="start|left|center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                    <TextView
                            android:id="@+id/product_detail_before_cart_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|left"
                            android:maxLines="1"
                            android:text="0"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/product_detail_before_cart_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="start|left"
                            android:maxLines="1"
                            android:text="TL"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/product_detail_price_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/product_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:text="0"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                    <TextView
                            android:id="@+id/product_detail_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="right|end"
                            android:text="TL"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>