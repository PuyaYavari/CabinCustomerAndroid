<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPageBackgroundPrimary">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPageBackgroundPrimary"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="@dimen/productDetailBottomBarHeight">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/horizontal_divider_light_16_0"
                android:orientation="vertical"
                android:showDividers="middle|end">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/horizontal_divider_0_2"
                    android:orientation="vertical"
                    android:showDividers="middle">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPageBackgroundPrimary"
                        android:elevation="3dp">

                    <androidx.viewpager.widget.ViewPager
                            android:id="@+id/product_detail_product_image_pager"
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:layout_marginBottom="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:padding="8dp">

                    <TextView
                            android:id="@+id/product_detail_seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Seller Name"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    <TextView
                            android:id="@+id/product_detail_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Product Name"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="16sp" />

                    <TextView
                            android:id="@+id/product_detail_product_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Product ID"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:tint="@color/colorTextsPrimary"
                            app:srcCompat="@drawable/icon_bike" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/cargo_date_label"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="15sp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/separator_dots"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="15sp" />

                    <TextView
                            android:id="@+id/product_detail_cargo_duration_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="Some Date"
                            android:textColor="@color/colorLightTextsPrimary"
                            android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:tint="@color/colorTextsPrimary"
                            app:srcCompat="@drawable/icon_bike" />

                    <TextView
                            android:id="@+id/product_detail_cargo_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="0"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="1"
                            android:text="@string/free_shipment_label"
                            android:textColor="@color/colorPriceGreen"
                            android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/color"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_detail_color_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/size"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/product_detail_size_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/peoduct_datail_product_explanation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/product_explanation_label"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/productDetailBottomBarHeight"
            android:background="@color/colorPageBackgroundPrimary"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        <Button
                android:id="@+id/product_detail_add_to_cart_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/productDetailAddToCartButtonHeight"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/default_button_background"
                android:textAlignment="center"
                android:textColor="@color/colorButtonLabelsPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/product_detail_bottom_bar_layout_50pv_guideline"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/add_to_cart_label" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/product_detail_bottom_bar_layout_50pv_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
                android:id="@+id/product_detail_bottom_bar_layout_texts_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/product_detail_bottom_bar_layout_50pv_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_price_strike"
                        android:gravity="start|left"
                        android:orientation="horizontal"
                        android:visibility="visible">

                    <TextView
                            android:id="@+id/product_detail_before_discount_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:text="000"
                            android:textColor="@color/colorLightTextsPrimary"
                            android:textSize="11sp" />

                    <TextView
                            android:id="@+id/product_detail_before_discount_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="right|end"
                            android:text="TL"
                            android:textColor="@color/colorLightTextsPrimary"
                            android:textSize="11sp" />
                </LinearLayout>

                <TextView
                        android:id="@+id/product_detail_in_cart_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="In Cart Discount"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="11sp"
                        android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="start|left|center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                    <TextView
                            android:id="@+id/product_detail_before_cart_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|left"
                            android:maxLines="1"
                            android:text="000"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/product_detail_before_cart_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="start|left"
                            android:maxLines="1"
                            android:text="TL"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/product_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:text="000"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                    <TextView
                            android:id="@+id/product_detail_price_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:gravity="right|end"
                            android:text="TL"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>