<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/finish_trade_overview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@drawable/default_borders_curved_corners"
                android:divider="@drawable/horizontal_divider_0_2"
                android:orientation="vertical"
                android:showDividers="middle">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/finish_trade_address_select_header_label"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_address"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/finish_trade_overview_delivery_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/invoice_address"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/finish_trade_overview_invoice_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/default_borders_curved_corners"
                android:divider="@drawable/horizontal_divider_0_2"
                android:orientation="vertical"
                android:showDividers="middle">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/finish_trade_payment_header_label"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="4dp">

                    <TextView
                            android:id="@+id/finish_trade_payment_method_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="0"
                            android:text="@string/pay_at_the_door_label"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                    <TextView
                            android:id="@+id/finish_trade_payment_method_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="0"
                            android:text="@string/pay_at_the_door_info"
                            android:textColor="@color/colorTextsPrimary"
                            android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingStart="4dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sum_price"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/finish_trade_payment_sum_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TL" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@drawable/default_borders_curved_corners"
                android:divider="@drawable/horizontal_divider_0_2"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical"
                android:showDividers="middle">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/agreement_and_forms"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/preliminary_information_form"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/finish_trade_accept_preliminary_information_form"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:isScrollContainer="true"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:orientation="vertical"
                    android:padding="8dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_sales_agreement"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                <TextView
                        android:id="@+id/finish_trade_accept_distance_sales_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:isScrollContainer="true"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <CheckBox
                android:id="@+id/finish_trade_accept_preliminary_information_form_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:button="@drawable/cabin_checkbox"
                android:padding="8dp"
                android:text="@string/accept_preliminary_information_form"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="14sp" />

        <CheckBox
                android:id="@+id/finish_trade_accept_distance_sales_agreement_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:button="@drawable/cabin_checkbox"
                android:padding="8dp"
                android:text="@string/accept_distance_sales_agreement"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="14sp" />

    </LinearLayout>
</ScrollView>