<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/address_options_no_address_layout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/address_options_ring"
            android:id="@+id/address_options_location_ring" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:alpha="0.45" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="104dp" app:srcCompat="@drawable/image_location"
            android:id="@+id/address_options_location_logo"
            app:layout_constraintEnd_toEndOf="@+id/address_options_location_ring"
            app:layout_constraintStart_toStartOf="@+id/address_options_location_ring"
            app:layout_constraintBottom_toBottomOf="@+id/address_options_location_ring"
            app:layout_constraintTop_toTopOf="@+id/address_options_location_ring"/>
    <TextView
            android:text="@string/no_invoice_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_options_no_address_text" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/address_options_location_ring" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorTextsPrimary" android:textSize="16sp"/>
    <TextView
            android:text="@string/no_delivery_address_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/address_options_no_address_hint" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/address_options_no_address_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp" android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp" android:textSize="16sp"
            android:textColor="@color/colorTextsPrimary" android:gravity="center"/>

    <Button
            android:id="@+id/address_options_no_address_add_button"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/default_button_background"
            android:text="@string/add_delivery_address"
            android:textColor="@color/colorButtonLabelsPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address_options_no_address_hint"
            app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>