<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="344dp"
                                                   android:layout_height="36dp"
                                                   android:id="@+id/orders_detail_headerbox_layout"
                                                   android:background="@drawable/orders_detailbox_left_top_right_borders">
    <TextView
            android:text="@string/delivery_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orders_detail_delivery_date_label" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:textSize="10sp"
            android:textColor="@color/colorPriceGreen" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orders_detail_delivery_date_layout"
            app:layout_constraintEnd_toEndOf="@+id/orders_detail_delivery_date_label"
            app:layout_constraintStart_toStartOf="@+id/orders_detail_delivery_date_label"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintTop_toBottomOf="@+id/orders_detail_delivery_date_label">
        <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orders_detail_delivery_day"
                android:textSize="10sp" android:textColor="@color/colorPriceGreen"/>
        <TextView
                android:text="@string/date_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="10sp" android:textColor="@color/colorPriceGreen"/>
        <TextView
                android:text="11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orders_detail_delivery_month"
                android:textSize="10sp" android:textColor="@color/colorPriceGreen"/>
        <TextView
                android:text="@string/date_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="10sp" android:textColor="@color/colorPriceGreen"/>
        <TextView
                android:text="2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orders_detail_delivery_year"
                android:textSize="10sp" android:textColor="@color/colorPriceGreen"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
