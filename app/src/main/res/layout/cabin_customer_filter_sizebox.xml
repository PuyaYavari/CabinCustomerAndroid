<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/filter_sizebox_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
                android:id="@+id/filter_sizebox_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/circle_page_background_color" />

        <TextView
                android:id="@+id/filter_sizebox_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="6dp"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:maxLines="1"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="16sp"
                app:autoSizeMinTextSize="6sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="@+id/filter_sizebox_background"
                app:layout_constraintEnd_toEndOf="@+id/filter_sizebox_background"
                app:layout_constraintStart_toStartOf="@+id/filter_sizebox_background"
                app:layout_constraintTop_toTopOf="@+id/filter_sizebox_background" />
</androidx.constraintlayout.widget.ConstraintLayout>