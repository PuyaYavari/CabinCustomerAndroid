<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clipToPadding="false">

                <ImageView
                        android:id="@+id/filter_sizebox_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="3dp"
                        android:padding="4dp"
                        android:cropToPadding="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/circle_page_background_color"
                        android:adjustViewBounds="true"/>

                <TextView
                        android:id="@+id/filter_sizebox_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:maxLines="1"
                        app:autoSizeMaxTextSize="14sp"
                        app:autoSizeMinTextSize="8sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/filter_sizebox_background"
                        app:layout_constraintStart_toStartOf="@+id/filter_sizebox_background"
                        app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                        android:id="@+id/filter_sizebox_ring"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:elevation="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/filter_sizebox_background"
                        app:layout_constraintEnd_toEndOf="@+id/filter_sizebox_background"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/filter_sizebox_background"
                        app:layout_constraintTop_toTopOf="@+id/filter_sizebox_background"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/circle_page_color_dark_cabin_color_stroke" />

                <TextView
                        android:id="@+id/filter_sizebox_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="10dp"
                        android:text="+99"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="@+id/filter_sizebox_ring"
                        app:layout_constraintEnd_toEndOf="@+id/filter_sizebox_ring"
                        app:layout_constraintStart_toStartOf="@+id/filter_sizebox_ring"
                        app:layout_constraintTop_toTopOf="@+id/filter_sizebox_ring" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>