<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.cabinInformationTechnologies.cabin.MainActivity"
        tools:openDrawer="start"
        android:background="@color/colorPrimary">

    <com.cabinInformationTechnologies.cabin.utils.DrawerContent
        android:id="@+id/main_drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/main_layout_side_menu_related_transitions">

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/main_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/main_activity_transitions"
            android:background="@color/colorPageBackgroundPrimary">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_header"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/defaultHeaderHeight"
                    android:background="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                <TextView
                        android:id="@+id/main_header_label"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/defaultHeaderHeight"
                        android:layout_gravity="center_horizontal|center"
                        android:fontFamily="Segoe UI"
                        android:gravity="center"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/colorHeaderLabelsPrimary"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                        android:id="@+id/main_cross_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:scaleType="fitXY"
                        android:tint="@color/colorHeaderLabelsPrimary"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/main_back_button"
                        app:layout_constraintEnd_toEndOf="@+id/main_back_button"
                        app:layout_constraintStart_toStartOf="@+id/main_back_button"
                        app:layout_constraintTop_toTopOf="@+id/main_back_button"
                        app:srcCompat="@drawable/icon_cross" />

                <ImageButton
                        android:id="@+id/main_drawer_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/main_back_button"
                        app:layout_constraintEnd_toEndOf="@+id/main_back_button"
                        app:layout_constraintStart_toStartOf="@+id/main_back_button"
                        app:layout_constraintTop_toTopOf="@+id/main_back_button"
                        app:srcCompat="@drawable/logo" />

                <ImageButton
                        android:id="@+id/main_back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/colorPrimary"
                        android:clickable="false"
                        android:contentDescription="back button"
                        android:padding="8dp"
                        android:tint="@color/colorHeaderLabelsPrimary"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/icon_back_arrow" />

                <TextView
                        android:id="@+id/main_clear_button"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="@string/clear"
                        android:textAlignment="center"
                        android:textColor="@color/colorHeaderLabelsPrimary"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/main_header_start_gl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.15" />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/main_header_end_gl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.85" />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_header_recyclerview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/main_header_end_gl"
                        app:layout_constraintStart_toStartOf="@+id/main_header_start_gl"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_max="wrap" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/nav_host_fragment_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/navbar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/main_header">


                <fragment
                        android:id="@+id/nav_host_fragment"
                        android:name="androidx.navigation.fragment.NavHostFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:defaultNavHost="true"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/blocker_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/defaultHeaderHeight"
                    android:layout_marginBottom="@dimen/navbarHeight"
                    android:background="@color/colorPageBackgroundPrimary"
                    android:elevation="5dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:id="@+id/blocker_layout_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/colorPageBackgroundPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/blocker_info_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/login_required"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextsPrimary"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/blocker_layout_06p_guideline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/blocker_layout_06p_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.6" />

                <Button
                        android:id="@+id/unblock_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/default_button_background"
                        android:text="@string/sign_in"
                        android:textColor="@color/colorButtonLabelsPrimary"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/blocker_layout_06p_guideline"
                        app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/navbar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/navbarHeight"
                    android:background="@color/colorNavigationBarBackgroundPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:menu="@menu/menu_cabin_customer_navbar" />

            <androidx.cardview.widget.CardView
                    android:id="@+id/select_size_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                                android:layout_width="68dp"
                                android:layout_height="102dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginBottom="16dp"
                                app:cardCornerRadius="5dp">

                            <ImageView
                                    android:id="@+id/select_size_product_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/sample_product" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginBottom="16dp"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/select_size_seller_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Some Seller"
                                    android:textColor="@color/colorTextsPrimary"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            <TextView
                                    android:id="@+id/select_size_product_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Some Looooooooooooooooooooooong Product Name"
                                    android:textColor="@color/colorTextsPrimary"
                                    android:textSize="12sp" />

                            <TextView
                                    android:id="@+id/select_size_product_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0"
                                    android:alpha="@dimen/cartProductboxTextsAlpha"
                                    android:text="Some Product ID"
                                    android:textColor="@color/colorTextsPrimary"
                                    android:textSize="12sp" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:orientation="vertical">

                                        <LinearLayout
                                                android:id="@+id/select_size_before_discount_price_layout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/default_price_strike"
                                                android:gravity="start|left|center_vertical"
                                                android:orientation="horizontal"
                                                android:visibility="gone">

                                            <TextView
                                                    android:id="@+id/select_size_before_discount_price"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right|end"
                                                    android:text="000"
                                                    android:textColor="@color/colorLightTextsPrimary"
                                                    android:textSize="11sp" />

                                            <TextView
                                                    android:id="@+id/select_size_before_discount_price_unit"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="2dp"
                                                    android:gravity="right|end"
                                                    android:text="TL"
                                                    android:textColor="@color/colorLightTextsPrimary"
                                                    android:textSize="11sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                                android:id="@+id/select_size_price_layout"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:orientation="horizontal">

                                            <TextView
                                                    android:id="@+id/select_size_price"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="right|end"
                                                    android:text="0"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="14sp" />

                                            <TextView
                                                    android:id="@+id/select_size_price_unit"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="2dp"
                                                    android:gravity="right|end"
                                                    android:text="TL"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textSize="14sp" />
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/select_size_in_cart_discount_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/cabin_dark_curved_borders"
                                        android:orientation="vertical"
                                        android:visibility="invisible">

                                    <TextView
                                            android:id="@+id/select_size_in_cart_discount_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="some in cart discount"
                                            android:textAlignment="center"
                                            android:textColor="@color/colorLightTextsPrimary"
                                            android:textSize="11sp" />

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                        <TextView
                                                android:id="@+id/select_size_in_cart_price"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="0"
                                                android:text="0000"
                                                android:textColor="@color/colorPricePurple"
                                                android:textSize="14sp" />

                                        <TextView
                                                android:id="@+id/select_size_in_cart_price_unit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                android:gravity="right|end"
                                                android:text="TL"
                                                android:textColor="@color/colorPricePurple"
                                                android:textSize="14sp" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingLeft="16dp"
                            android:paddingEnd="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="start"
                                android:maxLines="1"
                                android:text="@string/size"
                                android:textColor="@color/colorTextsPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/select_size_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:clipToPadding="false" />
                    </LinearLayout>

                    <Button
                            android:id="@+id/select_size_add_to_cart_button"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/selectSizeAddToCartButtonHeight"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="64dp"
                            android:background="@drawable/default_button_background"
                            android:text="@string/add_to_cart_label"
                            android:textAlignment="center"
                            android:textColor="@color/colorButtonLabelsPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/product_detail_bottom_bar_layout_50pv_guideline"
                            app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                    android:id="@+id/background_shadow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:elevation="8dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent" />


        </androidx.constraintlayout.motion.widget.MotionLayout>

    </com.cabinInformationTechnologies.cabin.utils.DrawerContent>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/defaultHeaderHeight"
            android:layout_marginBottom="@dimen/navbarHeight"
            android:visibility="invisible">

        <ProgressBar
                android:id="@+id/main_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/cabin_customer_main_sidebar" />
</androidx.drawerlayout.widget.DrawerLayout>