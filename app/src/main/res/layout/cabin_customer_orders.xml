<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPageBackgroundPrimary">


    <androidx.viewpager.widget.ViewPager
            android:id="@+id/orders_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPageBackgroundPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabLayout
                android:id="@+id/orders_tabs_layout"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/colorBelowHeaderPrimary"
                android:elevation="@dimen/defaultHeaderElevation"
                android:verticalScrollbarPosition="defaultPosition"
                app:tabIndicator="@drawable/tabbar_indicator_shape"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabIndicatorFullWidth="true"
                app:tabIndicatorGravity="bottom"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                app:tabTextColor="@color/colorTextsPrimary" />
    </androidx.viewpager.widget.ViewPager>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/orders_no_internet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPageBackgroundPrimary"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible">

        <View
                android:id="@+id/orders_no_internet_layout_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorPageBackgroundPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/orders_no_internet_info_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/no_internet"
                android:textAlignment="center"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/orders_no_internet_layout_06p_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/orders_no_internet_layout_06p_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

        <Button
                android:id="@+id/orders_no_internet_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/default_button_background"
                android:text="@string/retry"
                android:textColor="@color/colorButtonLabelsPrimary"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/orders_no_internet_layout_06p_guideline"
                app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>