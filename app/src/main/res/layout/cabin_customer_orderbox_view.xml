<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:clipToPadding="false"
        android:focusable="false">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/colorBoxesBackgroundPrimary"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="false"
            android:padding="8dp"
            app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/order_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/order_picture_layout"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/order_background"
                app:layout_constraintEnd_toEndOf="@+id/order_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/order_background"
                app:layout_constraintTop_toTopOf="@+id/order_background">

            <ImageView
                    android:id="@+id/order_picture"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order_picture_example"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                    android:id="@+id/order_count_picture_count_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginLeft="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/order_picture"
                    app:layout_constraintTop_toTopOf="parent">

                <View
                        android:id="@+id/order_count_background"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/order_count_background_shape"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/order_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="Segoe UI"
                        android:gravity="center"
                        android:textColor="@color/colorButtonLabelsPrimary"
                        android:textSize="12sp" />

            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
                android:id="@+id/orders_date_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/orders_orderbox_price_layout"
                app:layout_constraintStart_toEndOf="@+id/order_picture_layout"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:fontFamily="Segoe UI"
                    android:gravity="center"
                    android:textColor="@color/colorTextsPrimary"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/order_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:fontFamily="Segoe UI"
                    android:gravity="center"
                    android:textColor="@color/colorTextsPrimary"
                    android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/orders_orderbox_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|end"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/order_background"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                    android:id="@+id/orders_price_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorPriceGreen"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                        android:id="@+id/order_price_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="TL"
                        android:textColor="@color/colorPriceGreen"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/order_price"
                        app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <TextView
                    android:id="@+id/order_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:fontFamily="Segoe UI"
                    android:gravity="right|end"
                    android:textColor="@color/colorTextsPrimary"
                    android:textSize="12sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ordersbox_50pv_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>