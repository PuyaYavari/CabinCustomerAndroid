<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/order_background"
            android:layout_width="335dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:alpha="0.45"
            android:background="@drawable/order_background_shape"
            android:clickable="true"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="@+id/order_background"
            app:layout_constraintStart_toStartOf="@+id/order_background" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/order_background"
            app:layout_constraintTop_toTopOf="@+id/order_background" app:layout_constraintHorizontal_bias="0.01"
            android:id="@+id/order_picture_layout"
    >

        <ImageView android:id="@+id/order_picture"
                   android:src="@drawable/order_picture_example"
                   android:contentDescription="order_picture"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/order_count_picture_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/order_picture" android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0">

            <View android:id="@+id/order_count_background"
                  android:background="@drawable/order_count_background_shape"
                  android:layout_width="30dp"
                  android:layout_height="30dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView android:id="@+id/order_count_label"
                      android:fontFamily="Segoe UI"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="12sp"
                      android:textColor="@color/colorButtonLabelsPrimary"
                      android:layout_width="19dp"
                      android:layout_height="18dp"
                      android:text="@string/order1_order_count_label_string"
                      app:layout_constraintBottom_toBottomOf="@+id/order_count_background"
                      app:layout_constraintEnd_toEndOf="@+id/order_count_background"
                      app:layout_constraintStart_toStartOf="@+id/order_count_background"
                      app:layout_constraintTop_toTopOf="@+id/order_count_background"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:id="@+id/orders_date_time_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toEndOf="@+id/order_picture_layout"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/order_date"
                android:layout_width="67dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center"
                android:fontFamily="Segoe UI"
                android:gravity="center"
                android:text="@string/order1_date_string"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="12sp" />

        <TextView
                android:id="@+id/order_datetime"
                android:layout_width="41dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="8dp"
                android:fontFamily="Segoe UI"
                android:gravity="center"
                android:text="@string/order1_datetime_string"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/orders_orderbox_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="right|end"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/order_background"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/order_background"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/orders_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:text="255"
                    android:textColor="@color/colorPriceGreen"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/order_price_unit"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TL"
                    android:textColor="@color/colorPriceGreen"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/order_price"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/order_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="8dp"
                android:fontFamily="Segoe UI"
                android:gravity="right|end"
                android:text="@string/order1_payment_type_string"
                android:textColor="@color/colorTextsPrimary"
                android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>