<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <View android:id="@+id/order_background"
          android:background="@drawable/order_background_shape"
          android:layout_width="335dp"
          android:layout_height="80dp"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:alpha="0.45"
          android:clickable="true"
          android:focusable="false"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="75dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="@+id/order_background"
            app:layout_constraintStart_toStartOf="@+id/order_background" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/order_background"
            app:layout_constraintTop_toTopOf="@+id/order_background" app:layout_constraintHorizontal_bias="0.01"
            android:id="@+id/order_picture_layout"
    >

        <ImageView android:id="@+id/order_picture"
                   android:src="@drawable/order_picture_example"
                   android:contentDescription="order_picture"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/order_count_picture_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/order_picture" android:layout_marginLeft="45dp"
                android:layout_marginStart="45dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0">

            <View android:id="@+id/order_count_background"
                  android:background="@drawable/order_count_background_shape"
                  android:layout_width="30dp"
                  android:layout_height="30dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView android:id="@+id/order_count_label"
                      android:fontFamily="Segoe UI"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textSize="12sp"
                      android:textColor="@color/order_count_label_color"
                      android:layout_width="19dp"
                      android:layout_height="18dp"
                      android:text="@string/order1_order_count_label_string"
                      app:layout_constraintBottom_toBottomOf="@+id/order_count_background"
                      app:layout_constraintEnd_toEndOf="@+id/order_count_background"
                      app:layout_constraintStart_toStartOf="@+id/order_count_background"
                      app:layout_constraintTop_toTopOf="@+id/order_count_background"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView android:id="@+id/order_date"
              android:fontFamily="Segoe UI"
              android:layout_gravity="center_horizontal|center"
              android:gravity="center"
              android:textSize="12sp"
              android:textColor="@color/header_label_color"
              android:layout_width="67dp"
              android:layout_height="18dp"
              android:text="@string/order1_date_string"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@id/order_background"
              android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="@id/order_background"
              app:layout_constraintStart_toEndOf="@id/order_background"
              app:layout_constraintHorizontal_bias="0.4" android:layout_marginStart="8dp"
              android:layout_marginLeft="8dp"
              app:layout_constraintTop_toTopOf="@+id/order_background"
              app:layout_constraintBottom_toTopOf="@+id/order_datetime" android:layout_marginBottom="8dp"
              app:layout_constraintVertical_bias="1.0"
    />

    <TextView android:id="@+id/order_payment_type"
              android:fontFamily="Segoe UI"
              android:layout_gravity="center_horizontal|center"
              android:gravity="center"
              android:textSize="12sp"
              android:textColor="@color/header_label_color"
              android:layout_width="83dp"
              android:layout_height="18dp"
              android:text="@string/order1_payment_type_string"
              app:layout_constraintEnd_toEndOf="@+id/order_background"
              app:layout_constraintBottom_toBottomOf="@+id/order_background"
              app:layout_constraintTop_toTopOf="@+id/order_background" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="@+id/order_background" android:layout_marginLeft="8dp"
              app:layout_constraintHorizontal_bias="1.0" android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintVertical_bias="0.75"
    />

    <TextView android:id="@+id/order_datetime"
              android:fontFamily="Segoe UI"
              android:layout_gravity="center_horizontal|center"
              android:gravity="center"
              android:textSize="12sp"
              android:textColor="@color/header_label_color"
              android:layout_width="41dp"
              android:layout_height="18dp"
              android:text="@string/order1_datetime_string"
              app:layout_constraintEnd_toEndOf="@+id/order_background"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/order_background"
              android:layout_marginLeft="8dp"
              app:layout_constraintBottom_toBottomOf="@+id/order_background"
              app:layout_constraintTop_toTopOf="@+id/order_background" app:layout_constraintHorizontal_bias="0.4"
              app:layout_constraintVertical_bias="0.75"
    />

    <TextView android:id="@+id/order_price_label"
              android:fontFamily="Segoe UI"
              android:layout_gravity="center_horizontal|center"
              android:gravity="center"
              android:textSize="12sp"
              android:textColor="@color/order_price_label_color"
              android:layout_width="39dp"
              android:layout_height="18dp"
              android:text="@string/order1_price_label_string"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@id/order_background"
              android:layout_marginRight="8dp" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="@id/order_background" android:layout_marginLeft="8dp"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/order_payment_type"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/order_background"
              app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
    />

</androidx.constraintlayout.widget.ConstraintLayout>