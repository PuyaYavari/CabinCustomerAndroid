<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp">

    <CheckBox
            android:id="@+id/product_detail_product_sizebox_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@drawable/cabin_sizes_checkbox"
            android:checked="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/product_detail_product_sizebox_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:lineSpacingExtra="5sp"
            android:text="00/00"
            android:textColor="@color/colorTextsPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/product_detail_product_sizebox_checkbox"
            app:layout_constraintEnd_toEndOf="@+id/product_detail_product_sizebox_checkbox"
            app:layout_constraintStart_toStartOf="@+id/product_detail_product_sizebox_checkbox"
            app:layout_constraintTop_toTopOf="@+id/product_detail_product_sizebox_checkbox" />
</androidx.constraintlayout.widget.ConstraintLayout>