<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
            motion:constraintSetStart="@+id/start"
            motion:constraintSetEnd="@+id/end"
            motion:duration="250"
            motion:motionInterpolator="linear">
        <ConstraintSet android:id="@+id/start" >
            <Constraint android:id="@+id/sidebar_cabin_logo"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toTopOf="@id/header_separator"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/header_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_cabin_logo"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_profile_options_layout"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_profile_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/header_separator"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_measure_options_layout"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_measure_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_profile_options_layout"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_extraditions_layout"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_extraditions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_measure_options_layout"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_help_layout"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_help_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_extraditions_layout"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_exit_layout"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_exit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_help_layout"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="2dp"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="1.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toTopOf="@+id/sidebar_version_info"
                    android:visibility="invisible"/>
            <Constraint android:id="@+id/sidebar_version_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="1.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"/>
        </ConstraintSet>

        <ConstraintSet android:id="@+id/end" >
            <Constraint android:id="@+id/sidebar_cabin_logo"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toTopOf="@id/header_separator"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/header_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_cabin_logo"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_profile_options_layout"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_profile_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/header_separator"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_measure_options_layout"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_measure_options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_profile_options_layout"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_extraditions_layout"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_extraditions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_measure_options_layout"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_help_layout"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_help_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_extraditions_layout"
                    motion:layout_constraintBottom_toTopOf="@id/sidebar_exit_layout"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_exit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/sidebarVerticalMargins"
                    android:layout_marginBottom="@dimen/sidebarVerticalMargins"
                    motion:layout_constraintVertical_chainStyle="packed"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="0.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toBottomOf="@id/sidebar_help_layout"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="2dp"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="1.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toTopOf="@+id/sidebar_version_info"
                    android:visibility="visible"/>
            <Constraint android:id="@+id/sidebar_version_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintVertical_bias="1.0"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>
        </ConstraintSet>
    </Transition>

</MotionScene>