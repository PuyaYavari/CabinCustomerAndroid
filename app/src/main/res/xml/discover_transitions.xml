<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetStart="@id/discoverHeaderVisible"
        motion:constraintSetEnd="@id/discoverHeaderHidden"
        motion:duration="300">
    </Transition>
    <Transition
            motion:constraintSetStart="@id/discoverHeaderHidden"
            motion:constraintSetEnd="@id/discoverHeaderVisible"
            motion:duration="300">
    </Transition>

    <ConstraintSet android:id="@+id/discoverHeaderVisible">
        <Constraint
            android:id="@+id/discover_header"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0"
            android:elevation="@dimen/defaultHeaderElevation"
            android:translationY="0dp" />
        <Constraint
            android:id="@+id/discover_recyclerview"
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0"
            android:layout_marginTop="@dimen/discoverTotalHeaderHeight"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/discoverHeaderHidden">
        <Constraint
                android:id="@+id/discover_header"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintVertical_bias="0"
                android:elevation="@dimen/defaultHeaderElevation"
                android:translationY="@dimen/defaultHeaderHeightNegative" />
        <Constraint
                android:id="@+id/discover_recyclerview"
                android:layout_height="0dp"
                android:layout_width="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintVertical_bias="0"
                android:layout_marginTop="@dimen/discoverBellowHeaderBarHeight"/>
    </ConstraintSet>

</MotionScene>