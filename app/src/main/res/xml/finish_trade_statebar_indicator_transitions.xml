<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetStart="@+id/finishTradeStateIndicatorFirstPosition"
            motion:constraintSetEnd="@+id/finishTradeStateIndicatorSecondPosition"
            motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                    android:scaleY="1"
                    android:scaleX="1"
                    android:rotation="0"
                    motion:framePosition="0"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
            <KeyAttribute
                android:scaleY="1"
                android:scaleX="1"
                android:rotation="-30"
                motion:framePosition="15"
                motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
        </KeyFrameSet>
    </Transition>

    <Transition
            motion:constraintSetStart="@+id/finishTradeStateIndicatorSecondPosition"
            motion:constraintSetEnd="@+id/finishTradeStateIndicatorThirdPosition"
            motion:duration="1000">
        <KeyFrameSet>
            <KeyAttribute
                    android:scaleY="1"
                    android:scaleX="1"
                    android:rotation="0"
                    motion:framePosition="0"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
            <KeyAttribute
                    android:scaleY="1"
                    android:scaleX="1"
                    android:rotation="-30"
                    motion:framePosition="15"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
        </KeyFrameSet>
    </Transition>

    <Transition
            motion:constraintSetStart="@+id/finishTradeStateIndicatorSecondPosition"
            motion:constraintSetEnd="@+id/finishTradeStateIndicatorFirstPosition"
            motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                    android:rotation="0"
                    android:scaleY="1"
                    android:scaleX="-1"
                    motion:framePosition="5"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                    android:rotation="0"
                    android:scaleY="1"
                    android:scaleX="-1"
                    motion:framePosition="95"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
        </KeyFrameSet>
    </Transition>

    <Transition
            motion:constraintSetStart="@+id/finishTradeStateIndicatorThirdPosition"
            motion:constraintSetEnd="@+id/finishTradeStateIndicatorSecondPosition"
            motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                    android:rotation="0"
                    android:scaleY="1"
                    android:scaleX="-1"
                    motion:framePosition="5"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
            <KeyAttribute
                    android:rotation="0"
                    android:scaleY="1"
                    android:scaleX="-1"
                    motion:framePosition="95"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
        </KeyFrameSet>
    </Transition>

    <Transition
            motion:constraintSetStart="@+id/finishTradeStateIndicatorThirdPosition"
            motion:constraintSetEnd="@+id/finishTradeStateIndicatorFirstPosition"
            motion:duration="3000">
        <KeyFrameSet>
            <KeyAttribute
                    android:rotation="0"
                    android:scaleY="1"
                    android:scaleX="-1"
                    motion:framePosition="5"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
            <KeyAttribute
                    android:rotation="0"
                    android:scaleY="1"
                    android:scaleX="-1"
                    motion:framePosition="95"
                    motion:motionTarget="@+id/finish_trade_statebar_indicator"/>
        </KeyFrameSet>
    </Transition>



    <ConstraintSet android:id="@+id/finishTradeStateIndicatorFirstPosition">
        <Constraint
                android:scaleX="1"
                android:scaleY="1"
                android:id="@+id/finish_trade_statebar_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                motion:layout_constraintHorizontal_bias="0"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/finishTradeStateIndicatorSecondPosition">
        <Constraint
                android:scaleX="1"
                android:scaleY="1"
                android:id="@+id/finish_trade_statebar_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/finishTradeStateIndicatorThirdPosition">
        <Constraint
                android:scaleX="1"
                android:scaleY="1"
                android:id="@+id/finish_trade_statebar_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
    </ConstraintSet>

</MotionScene>
