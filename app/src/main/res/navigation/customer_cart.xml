<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/customer_cart" app:startDestination="@id/cabinCustomerCartFragment">

    <fragment android:id="@+id/cabinCustomerCartFragment"
              android:name="ist.cabin.cabincustomer.fragments.cart.CabinCustomerCartFragment"
              android:label="CabinCustomerCartFragment">
        <action
                android:id="@+id/actionCartToProductDetail"
                app:destination="@id/cabinCustomerProductDetailFragment3"
                app:enterAnim="@anim/slide_in_from_bottom"
                app:exitAnim="@anim/slide_out_to_top"
                app:popEnterAnim="@anim/slide_in_from_top"
                app:popExitAnim="@anim/slide_out_to_bottom" />
    </fragment>
    <fragment
            android:id="@+id/cabinCustomerProductDetailFragment3"
            android:name="ist.cabin.cabincustomer.fragments.productDetail.CabinCustomerProductDetailFragment"
            android:label="CabinCustomerProductDetailFragment" >
        <argument
                android:name="product"
                app:argType="ist.cabin.cabinCustomerBase.models.local.MODELProduct" />
        <argument
                android:name="initialColor"
                app:argType="ist.cabin.cabinCustomerBase.models.local.MODELColor"
                app:nullable="true"
                android:defaultValue="@null" />
    </fragment>
</navigation>