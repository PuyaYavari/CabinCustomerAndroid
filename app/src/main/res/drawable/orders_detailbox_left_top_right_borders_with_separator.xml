<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/orders_detail_table_borders" />
            <padding
                    android:top="0.5dp"
                    android:left="0.5dp"
                    android:right="0.5dp"
            />

            <corners android:radius="5dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:centerColor="@color/order_background_color"
                      android:startColor="@color/order_background_color"
                      android:endColor="@color/order_background_color"
                      android:centerX="0.5"
                      android:centerY="0.5"/>
            <padding android:bottom="0.5dp"/>
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

            <solid android:color="@color/white" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
        </shape>
    </item>
</layer-list>