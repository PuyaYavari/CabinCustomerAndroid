<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorBordersPrimary" />
            <padding
                    android:top="0.5dp"
                    android:left="0.5dp"
                    android:right="0.5dp"
            />

            <corners android:radius="5dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

            <solid android:color="@color/white" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
        </shape>
    </item>
</layer-list>